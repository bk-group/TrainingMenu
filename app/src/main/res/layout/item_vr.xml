<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/LightAppTheme">
    <ImageView
        android:id="@+id/avatar_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_near_me"
        android:background="@drawable/background_circle_border"
        android:tint="#999"
        android:padding="8dp"/>
    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/avatar_icon"
        app:layout_constraintStart_toEndOf="@id/avatar_icon"
        android:text="Faker"
        android:textColor="#0a0a0a"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/description_text_view"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="8dp"/>
    <TextView
        android:id="@+id/user_action_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="@id/author_text_view"

        app:layout_constraintStart_toEndOf="@id/author_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:text=" added a 360 photo"
        android:textColor="#0a0a0a"
        />
    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/author_text_view"
        app:layout_constraintBottom_toBottomOf="@id/avatar_icon"
        app:layout_constraintStart_toStartOf="@id/author_text_view"
        app:layout_constraintEnd_toStartOf="@id/menu_button"
        android:textColor="#0a0a0a"
        android:text="Oct 7 5:30 AM"/>
    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/avatar_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:tint="#0a0a0a"
        android:padding="12dp"
        android:src="@drawable/ic_more_horiz_black_24dp"
        android:clickable="true"
        android:focusable="true"/>
    <TextView
        android:id="@+id/content_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/avatar_icon"
        app:layout_constraintTop_toBottomOf="@id/avatar_icon"
        app:layout_constraintEnd_toEndOf="@id/menu_button"
        tools:text="@string/learn_how_to_create_3d_photos"
        android:textColor="#0a0a0a"
        android:layout_marginTop="16dp"
        />
    <com.ldt.vrview.VRView
        android:id="@+id/vr_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/content_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />
    <View
        android:layout_width="0dp"
        android:layout_height="6dp"
        app:layout_constraintTop_toBottomOf="@id/vr_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#26000000"/>
</androidx.constraintlayout.widget.ConstraintLayout>
