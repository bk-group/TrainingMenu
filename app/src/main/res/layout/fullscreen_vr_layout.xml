<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/bottom_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/author_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#33000000"/>
    <TextView
        android:id="@+id/author_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Panorama VR"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/description_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColor="@android:color/white"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:fontFamily="@font/helvetica_font"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create your own immersive experiences using 360Â° photos and videos. Sphere optimizes the delivery, for a fast loading time and smooth playback."
        app:layout_constraintBottom_toTopOf="@id/time_text_view"
        app:layout_constraintStart_toStartOf="@id/author_text_view"
        app:layout_constraintEnd_toEndOf="@id/author_text_view"
        android:textColor="@color/FlatWhite"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/helvetica_font"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/time_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Today at 11:36 PM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/author_text_view"
        app:layout_constraintEnd_toEndOf="@id/author_text_view"
        android:textColor="#AAA"
        android:textSize="12sp"
        android:layout_marginBottom="16dp"
        android:fitsSystemWindows="true"/>
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_24dp"
        android:background="@drawable/circle_background_support_touch_dark"
        android:tint="#FAF3DD"
        android:alpha="0.8"
        android:padding="12dp"
        />
    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_more_vert_black_24dp"
        android:background="@drawable/circle_background_support_touch_dark"
        android:tint="#FAF3DD"
        android:alpha="0.8"
        android:padding="14dp"
        android:clickable="true"
        android:focusable="true"
        />
    <TextView
        android:id="@+id/pick_image_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="@drawable/background_invisible_then_border_on_pressed"
        android:text="@string/choose_vr_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/FlatWhite"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="66dp"
        android:layout_marginEnd="32dp"
        android:visibility="gone"
        />
    <androidx.constraintlayout.widget.Group
        android:id="@+id/sample_group"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:constraint_referenced_ids="author_text_view,time_text_view,description_text_view,bottom_background"
        />
</androidx.constraintlayout.widget.ConstraintLayout>