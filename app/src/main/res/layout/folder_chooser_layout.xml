<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="400dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="16dp"
    android:clickable="true"
    tools:layout_marginTop="32dp"
    android:focusable="true"
    app:cardBackgroundColor="#171228"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:background="@android:color/transparent"
            android:background="@drawable/gradient_heavy_blue">
            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/folder_chooser"
                android:layout_marginTop="32dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="32dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="@font/helvetica_font"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/FlatWhite"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/close"/>
            <ImageView
                android:id="@+id/close"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/title"
                android:src="@drawable/close"
                android:tint="#AAA"
                android:focusable="true"
                android:clickable="true"
                android:padding="30dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layout_constraintHeight_default="wrap"
                app:layout_constraintHeight_max="400dp"
                app:layout_constraintTop_toBottomOf="@id/title"
                tools:listitem="@layout/item_folder"
                android:clipToPadding="false"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                tools:layoutManager="LinearLayoutManager"/>
            <TextView
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="30dp"
                android:background="@drawable/background_round_teal_blue_border"
                android:text="@string/choose_this_folder"
                android:textColor="@color/FlatTealBlue"
                android:textSize="17sp"
                app:layout_constraintTop_toBottomOf="@id/recycler_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/helvetica_font"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/folder_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toStartOf="@id/button"
                app:layout_constraintTop_toTopOf="@id/button"
                app:layout_constraintBottom_toBottomOf="@id/button"
                android:src="@drawable/ic_folder_open_black_24dp"
                android:tint="@color/FlatTealBlue"
                android:focusable="true"
                android:clickable="true"
                android:padding="12dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>