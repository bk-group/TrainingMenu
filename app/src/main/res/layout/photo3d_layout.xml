<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.zalo.trainingmenu.fundamental.texture.GLTextureView
        android:id="@+id/gl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/original_button"
        android:background="@drawable/background_invisible_then_border_on_pressed"
        android:text="@string/choose_original_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/depth_button"
        android:gravity="center"
        android:padding="15dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/FlatWhite"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_chainStyle="packed"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:id="@+id/depth_button"
        android:background="@drawable/background_invisible_then_border_on_pressed"
        android:text="@string/choose_depth_photo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:padding="15dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@color/FlatWhite"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="50dp"
        />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/remove_button"
        android:src="@drawable/ic_delete_black_24dp"
        android:tint="@color/FlatWhite"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingTop="14dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:paddingBottom="14dp"
        android:background="@drawable/background_invisible_then_border_on_pressed" />
    <ImageView
        android:id="@+id/back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_24dp"
        android:background="@drawable/background_invisible_then_border_on_pressed"
        android:tint="#FAF3DD"
        android:alpha="0.8"
        android:padding="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
